<krpano version="1.19" title="BALA Projects" onstart="startup();" showerrors="false">
	
	<!-- the skin -->
	<include url="skin/vtourskin.xml" />
	<include url="skin/custom.xml" />

	<!-- This is the skin_settings where hs_anim_delay is set. -->
  <skin_settings maps="true"
	               maps_type=""
	               custom_map="false"	
				   			 menu-btn="true"
				         map-btn="false"
				         navxoffset="0"
				         vr-icon-xoffset="50"
				         gyro-icon-xoffset="100"
				  
				   			 hs_delay="1"
				   			 hs_anim_delay="0"
				   			 bg_type="stretch"
				   			 corporate_logo="true"
				   			 corp-logo-xoffset="10"
				   			 project_logo="true"
				   
				   			 zoom_buttons="false"	
				   			 speak_buttons="false"
				   			 password="false"
				   			 start_screen="false"
				   			 maps_bing_api_key=""
	               maps_zoombuttons="false"
				   			 maps_zoom="25"
				   			 share-btn="false"
	               gyro="true"
	               arrows_html="true"
				   			 title="1" 
				   			 grid_button="false"
				    		 littleplanetintro="true"
	               />

	<layer name="skin_logo" url="" scale="0.25" opened_onclick="openurl('...',_blank);" />
	
	<action name="startup">
		delayedcall(1, intro-page(););
	</action>

	<action name="intro-page">

		if(skin_settings.start_screen,
 	 		if(device.html, splash(); , flashsplash(); );,
 			set(layer[intro-con].visible,false);
			set(intro_done,true);
  		if(device.html, choose(); , flash-choose();); 
 	); 

</action>

	<scene name="scene" title="1911 Walnut" lat="" lng="" heading="" >

		<!-- TODO: Remove this to take out the logs. -->
		<!-- <events onclick="screentosphere(mouse.x, mouse.y, m_ath, m_atv); showlog(); trace('clicked at ath=',m_ath,' atv=',m_atv);" /> -->
		<!-- TODO: Comment out showlog -->
		<!-- view settings -->
		<view hlookat="0" vlookat="0" fovtype="MFOV" vlookatmax="-90" vlookatmin="90" limitview="range" fovmin="40" fovmax="90" />


		<image>
			<cube url="pano.tiles/pano_%s.jpg" />
		</image>

	</scene>

</krpano>
