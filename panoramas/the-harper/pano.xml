<krpano version="1.19" title="LF Driscoll Projects" onstart="startup();" showerrors="false">
	
	<!-- the skin -->
	<include url="skin/vtourskin.xml" />
	<include url="skin/custom.xml" />

 	<skin_settings navxoffset="0"
		         vr-icon-xoffset="10"
		         fs-icon-xoffset="55"
	   			 hs_delay="1"
	   			 hs_anim_delay="0"
	   			 bg_type="stretch"
	   			 corporate_logo="true"
   			 	 corp-logo-xoffset="10"
           		 arrows_html="true"
   	/>
	
	<action name="startup">
		set(layer[intro-con].visible,false);
		set(intro_done,true);
		loadscene(get(scene[0].name),null,get(skin_settings.loadscene_flags),get(skin_settings.loadscene_blend)); 
	</action>

	<!-- FLOOR 22 SCENE -->
	<scene name="scene_floor_22" title="" lat="" lng="" heading="">

		<!-- TODO: Remove this to take out the logs. -->
		<!-- <events onclick="screentosphere(mouse.x, mouse.y, m_ath, m_atv); showlog(); trace('clicked at ath=',m_ath,' atv=',m_atv);" /> -->
		
		<!-- view settings -->
		<view hlookat="50" vlookat="10" fovtype="MFOV" vlookatmax="-90" vlookatmin="90" limitview="range" fovmin="40" fovmax="85" fov="85" />
		<!-- Set a tighter fov if device is mobile -->
		<view fov="70" devices="mobile" />

		<preview url="panos/floor_22.tiles/preview.jpg" />

		<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
			<level tiledimagewidth="8192" tiledimageheight="8192">
				<cube url="panos/floor_22.tiles/%s/l4/%v/l4_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="4096" tiledimageheight="4096">
				<cube url="panos/floor_22.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="2048" tiledimageheight="2048">
				<cube url="panos/floor_22.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="panos/floor_22.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<!-- FLOOR 20 SCENE -->
	<scene name="scene_floor_20" title="" lat="" lng="" heading="" >

		<view hlookat="0" vlookat="20" fovtype="MFOV" vlookatmax="-90" vlookatmin="90" limitview="range" fovmin="40" fovmax="90" />


		<preview url="panos/floor_20.tiles/preview.jpg" />

			<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
				<level tiledimagewidth="4352" tiledimageheight="4352">
					<cube url="panos/floor_20.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
				</level>
				<level tiledimagewidth="2176" tiledimageheight="2176">
					<cube url="panos/floor_20.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
				</level>
				<level tiledimagewidth="1152" tiledimageheight="1152">
					<cube url="panos/floor_20.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
				</level>
			</image>
	</scene>

</krpano>
