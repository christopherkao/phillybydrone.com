  <skin_settings maps="true"
	               maps_type=""
	               custom_map="false"	
				   			 menu-btn="true"
				         map-btn="false"
				         navxoffset="0"
				         vr-icon-xoffset="20"
				         fs-icon-xoffset="60"
				         gyro-icon-xoffset="100"
				  
