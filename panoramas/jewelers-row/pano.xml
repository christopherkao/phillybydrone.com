<krpano version="1.19" onstart="startup();" showerrors="false">
	
	<include url="skin/vtourskin.xml" />
	<include url="skin/custom.xml" />

  <skin_settings maps="true"
	               maps_type=""
	               custom_map="false"	
				   			 menu-btn="true"
				         map-btn="false"
				         navxoffset="0"
				         vr-icon-xoffset="20"
				         fs-icon-xoffset="60"
				         gyro-icon-xoffset="100"
				  
				   			 hs_delay="1"
				   			 hs_anim_delay="0"
				   			 bg_type="stretch"
				   			 corporate_logo="true"
				   			 corp-logo-xoffset="10"
				   			 project_logo="true"
				   
				   			 zoom_buttons="false"	
				   			 speak_buttons="false"
				   			 password="false"
				   			 start_screen="false"
				   			 maps_bing_api_key=""
	               maps_zoombuttons="false"
				   			 maps_zoom="25"
				   			 share-btn="false"
	               			 gyro="false"
	               arrows_html="true"
				   			 title="1" 
				   			 grid_button="false"
				    		 littleplanetintro="false"
	               />

	<layer name="skin_logo" url="" scale="0.25" opened_onclick="openurl('...',_blank);" />
	
	<action name="startup">
		intro-page();
	</action>

	<action name="intro-page">

		if(skin_settings.start_screen,
 	 		if(device.html, splash(); , flashsplash(); );,
 			set(layer[intro-con].visible,false);
			set(intro_done,true);
  		if(device.html, choose(); , flash-choose();); 
 	); 

	</action>

	<scene name="scene" title="Jeweler's Row" lat="" lng="" heading="" >

		<view hlookat="0" vlookat="20" fovtype="MFOV" vlookatmax="-90" vlookatmin="90" limitview="range" fovmin="40" fovmax="90" />


		<preview url="pano.tiles/preview.jpg" />

			<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
				<level tiledimagewidth="4352" tiledimageheight="4352">
					<cube url="pano.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
				</level>
				<level tiledimagewidth="2176" tiledimageheight="2176">
					<cube url="pano.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
				</level>
				<level tiledimagewidth="1152" tiledimageheight="1152">
					<cube url="pano.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
				</level>
			</image>
	</scene>

</krpano>
